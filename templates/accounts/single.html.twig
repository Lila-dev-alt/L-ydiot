{% extends 'base.html.twig' %}

{% block title %}Lydiot | {{ account.nomCompte }}{% endblock %}

{% block body %}
    <section class="heading" style="margin: 1em auto; max-width: 800px;">
        <div class="wrapper-section mb-[4rem]" >
            <h1> Compte : {{ account.nomCompte }}</h1>
             <bdi> Montant : {{ account.money }}<span class="devise">â‚¬</span></bdi>
             <p class="text-lg"> Numero de compte : {{ account.accountId }}</p>
        </div>
    </section>
    <section class="single-accounts mb-[4rem]" style="margin: 1em auto; max-width: 800px;">
        <div class="wrapper-section">
            <div class="liens">
                <a href="{{ path('accounts') }}/virement/{{ account.id }}"><span class="material-icons">account_balance_wallet</span>Ajouter de l'argent</a>
                <a href="{{ path('accounts') }}/transaction/{{ account.id }}"><span class="material-icons">currency_exchange</span>Faire une transaction</a>
                <a href="{{ path('archive-account', {accountId: account.accountId}) }}"><span class="material-icons">delete</span>Supprimer le compte</a>
            </div>
        </div>
    </section>
{% endblock %}
