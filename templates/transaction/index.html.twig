{% extends 'base.html.twig' %}

{% block title %}Lydiot | Transaction{% endblock %}

{% block body %}
    <section class="accounts" style="margin: 1em auto; max-width: 800px;">
        <div class="wrapper-section">
            <h1>Envoyer de l'argent</h1>
            {{ form_start(form) }}
            <p class="mb-[10px]"> Je souhaite envoyer de l'argent sur le compte : </p>
            {{ form_widget(form.recipient,  { 'attr': {'class': 'w-full px-3 py-2 text-sm leading-tight text-gray-700 border mb-[2rem] rounded shadow appearance-none focus:outline-none focus:shadow-outline'} }) }}
            {{ form_widget(form.money,  { 'attr': {'class': 'w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline'} }) }}

            <div class="text-xs text-red-500">{{ form_errors(form.money) }} </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
